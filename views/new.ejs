<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div id="new-form">
            <h1>Add New Todo</h1>
            <form action="/" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="entry" placeholder="new todo list item">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="details" placeholder="is it a bigger task?">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/">Return</a>
</div>


<% include ./partials/footer %>