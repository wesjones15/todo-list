<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div id="new-form">
            <h1>Add New Todo</h1>
            <form action="/" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="todo[entry]" placeholder="new todo list item">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="todo[priority]" min="1" max="3" placeholder="Task priority (1-3)" step="1">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="todo[details]" placeholder="Describe the task in more detail">
                </div>
                <div class="form-group">
                    <a href="/" class="btn btn-lg btn-danger btn-block">Cancel</a>
                    <button class="btn btn-lg btn-primary btn-block">Add</button>
                </div>
            </form>
        </div>
    </div>
    
</div>


<% include ./partials/footer %>